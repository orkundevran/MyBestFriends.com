@using MyBestFriends.Entities.ValidationModels;
@model RegisterViewModel
@{
    ViewBag.Title = "MyBestFriends - Kayıt Sayfası";
}
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/Valitadion-summary.css" rel="stylesheet" />
<style type="text/css">
   
</style>

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Üye Kayıt Formu </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.KullaniciAdiSoyadi, new { @class = "form-control", placeholder = "Adınız Soyadınız" })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "E-Posta adresiniz" })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.TekrarSifre, new { @class = "form-control", placeholder = "Tekrar Şifreniz", type = "password" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-phone" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", placeholder = "Telefon numaranız" })
                    </div>



                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt ol</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}


