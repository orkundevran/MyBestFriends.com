@using MyBestFriends.Entities
@model Kullanici
@{
    ViewBag.Title = "Kullanıcı Profili";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">

        <div class="col-md-2">
            <img src="~/Images/@Model.ProfilFotoDosyaAdi" class="img-circle"  width="128" height="128"/>
        </div>

        <div class="col-md-8">
            <h3>@Model.KullaniciAdiSoyadi</h3>
            <br />
            <h6><b>E-Posta</b>@Model.Mail</h6>
            <h6><b>Telefon</b>@Model.Telefon</h6>
            <br />
            <h6><a href="#">Daha fazlası..</a></h6>
        </div>

        <div class="col-md-2 text-right">
            <div class="btn-group">
                <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                    Ayarlar
                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("EditProfil")">
                            <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenleme
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DeleteProfil")" onclick="return confirm('Hesabınızı silmek istediğinize emin misiniz?');">
                            <span class="glyphicon glyphicon-trash">&nbsp;</span> Sil
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Ilan")">
                            <span class="glyphicon glyphicon-list">&nbsp;</span> İlanlarım
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>

